<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.mypizza.app.PanierActivity"
    android:id="@+id/panierLayout">

    <GridView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panierGrid"
        android:numColumns="2"
        ></GridView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Totale commande : "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prixText"/>
        </LinearLayout>



    <Button android:id="@+id/commanderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commander"></Button>



</LinearLayout>